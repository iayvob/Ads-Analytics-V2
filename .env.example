# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000
NODE_ENV=development

# Security
SESSION_SECRET=replace_this_with_at_least_32_characters_long_secret

# Database Configuration
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/social-auth-db"

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_BUSINESS_CONFIG_ID=your_optional_business_config_id

# Instagram OAuth Configuration
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter OAuth Configuration
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Rate Limiting (Optional - defaults exist in code)
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
